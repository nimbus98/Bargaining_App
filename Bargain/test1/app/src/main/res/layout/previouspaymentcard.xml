<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_prev"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/diabledgray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:contentPadding="10dp"

        app:cardBackgroundColor="@color/toolbarwhite"
        style="@style/Widget.MaterialComponents.CardView"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/first_name_prev"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:text="Akash Nair"
                />

            <!--"₹"-->
            <TextView


                android:layout_alignParentRight="true"

                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:id="@+id/payment_prev"
                android:padding="5dp"
                android:layout_marginTop="7dp"
                android:text="0.0"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FF0000"
                />
            <TextView
                android:id="@+id/date_prev"
                android:layout_below="@+id/first_name_prev"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="24/3/2019"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/diabledgray"
                />
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@id/first_name_prev"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/dot"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_brightness_1_black_24dp"
                android:layout_toRightOf="@id/date_prev"
                />
            <!--"₹"-->
            <TextView

                android:layout_toRightOf="@+id/dot"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:id="@+id/status_prev"
                android:layout_marginTop="12dp"
                android:text="Status"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_name_prev"
                android:textSize="17dp"
                android:textColor="@color/diabledgray"
                />

        </RelativeLayout>
    </android.support.design.card.MaterialCardView>


</RelativeLayout>