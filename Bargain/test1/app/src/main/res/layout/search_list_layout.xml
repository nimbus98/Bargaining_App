<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view"
            app:strokeWidth="0.5dp"
            app:strokeColor="@color/diabledgray"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:contentPadding="10dp"

            app:cardBackgroundColor="@color/toolbarwhite"
            style="@style/Widget.MaterialComponents.CardView"
            >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/search_list_sportsImage"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/negoreg"
                            />
                        <TextView
                            android:id="@+id/first_name"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/search_list_sportsImage"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18dp"

                            />
                        <TextView
                            android:layout_toRightOf="@+id/first_name"
                            android:id="@+id/last_name"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:id="@+id/city_search_list"
                            android:layout_toRightOf="@+id/search_list_sportsImage"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/first_name"
                            android:textSize="15dp"
                            android:textColor="@color/diabledgray"
                            />

                        <TextView
                            android:id="@+id/search_list_age"
                            android:layout_toRightOf="@+id/search_list_sportsImage"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:text="age"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/city_search_list"
                            android:textSize="15dp"
                            android:textColor="@color/diabledgray"
                            />

                        <ImageView
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_below="@id/city_search_list"
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/dot"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_brightness_1_black_24dp"
                            android:layout_toRightOf="@id/search_list_age"
                            />
                        <TextView

                            android:layout_toRightOf="@+id/dot"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                           android:id="@+id/rate_search_list"
                            android:layout_marginTop="12dp"
                            android:text="3.5"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/city_search_list"
                            android:textSize="15dp"
                            android:textColor="@color/diabledgray"
                            />

                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_below="@id/city_search_list"
                            android:layout_marginTop="18dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/ic_star_black_24dp"
                            android:id="@+id/search_list_star"
                            android:layout_toRightOf="@id/rate_search_list"
                            />

                </RelativeLayout>
        </android.support.design.card.MaterialCardView>
